{
  "manifest_version": 2,
  "name": "PocketTags",
  "version": "0.0.5",
  "description": "Adds tags to articles in Pocket base on configurable rules",
  "background": {"page":"background.html"},
  "permissions": [
    "http://*/*", "https://*/*", "storage","declarativeContent", "identity"
  ],
  "web_accessible_resources" : ["oauth.html","oauth.js"],
  "page_action" : {
    "default_title" : "PocketTags settings",
    "default_popup" : "popup.html",
  "default_icon" : {
    "19" : "tag16.png",
    "38" : "tag32.png"
  }
  }
}
